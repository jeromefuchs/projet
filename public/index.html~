	<!-- Load the Paper.js library -->
	<script type="text/javascript" src="Paper/docs/assets/js/paper.js"></script>
	<!-- Define inlined PaperScript associate it with myCanvas -->
	<script type="text/paperscript" canvas="myCanvas">
		var myCircle = new Path.Circle(new Point(100, 100), 5);
		myCircle.fillColor = 'black';

		//d√©finie la destination 
		var vector = Point.random();
vector.length=5;

		function onFrame(event) {
			myCircle.translate(vector);
		}

		function onMouseDown(event){
			vector =  event.point - myCircle.position;
			vector.length=5;
		}
	</script>
